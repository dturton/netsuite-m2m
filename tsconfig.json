{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "lib": ["esnext"],
    "allowJs": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "lib",
  },
  "include": ["src/**/*"],
  "exclude": ["test/**/*"]
}
